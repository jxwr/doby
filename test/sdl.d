SCREEN_HEIGHT  = 600
SCREEN_WIDTH   = 800
CELL_ROW_COUNT = 40

func update(board) {
	for i = 0; i < CELL_ROW_COUNT; i++ {
		for j = 0; j < CELL_ROW_COUNT; j++ {
			if i == 0 || i == CELL_ROW_COUNT-1 || j == 0 || j == CELL_ROW_COUNT-1 {
				board[i][j] = 0
			} else {
				s0 = board[i-1][j-1] + board[i-1][j] + board[i-1][j+1]
				s1 = board[i][j-1] + board[i][j+1]
				s2 = board[i+1][j-1] + board[i+1][j] + board[i+1][j+1]
				sum = s0 + s1 + s2

				if sum == 2 {
					continue
				} else if sum == 3 {
					board[i][j] = 1
				} else {
					board[i][j] = 0
				}
			}
		}
	}
}

func drawCell(surface, board, i, j) {
	cellWidth = SCREEN_HEIGHT / CELL_ROW_COUNT
	x = j * cellWidth
	y = i * cellWidth

	rect_back = sdl.NewRect(x, y, cellWidth, cellWidth)
	surface.FillRect(rect_back, 16746960)

	rect = sdl.NewRect(x, y, cellWidth - 1, cellWidth - 1)
	if board[i][j] == 0 {
		surface.FillRect(rect, 16711680)
	} else {
		surface.FillRect(rect, 16776960)
	}
}

func drawBoard(surface, board) {
	for i = 0; i < board[0].Length(); i++ {
		for j = 0; j < board.Length(); j++ {
//			fmt.Println("begin", i, j)
			drawCell(surface, board, i, j)
		}
	}
}

